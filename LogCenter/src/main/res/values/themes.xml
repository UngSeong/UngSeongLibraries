<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="LogCenterLibrary" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/logcenter_purple_500</item>
        <item name="colorPrimaryVariant">@color/logcenter_purple_700</item>
        <item name="colorOnPrimary">@color/logcenter_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/logcenter_teal_200</item>
        <item name="colorSecondaryVariant">@color/logcenter_teal_700</item>
        <item name="colorOnSecondary">@color/logcenter_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="logcenter_alarmItemBackground">@color/logcenter_alarm_item_light</item>
        <item name="logcenter_rippleClickColor">@color/logcenter_ripple_click_light</item>
    </style>

    <style name="LogCenterActivity" parent="LogCenterLibrary">

    </style>

</resources>